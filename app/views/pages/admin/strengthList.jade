extends ../../adminContentLayout

block content
	div.content-header
		ol.breadcrumb
			li
				i.fa.fa-dashboard
				| &nbsp;&nbsp;
				a.text-info(href="/admin/index") 首页
			li.active=title
	div.content
		.row
			.col-xs-12
				.box
					.box-header.with-border
						h3.box-title 实力列表
						.box-tools
							.btn-toolbar
								a.btn.btn-success.btn-flat.btn-xs#add(href="/admin/strength/new") 新增
								button.btn.btn-warning.btn-flat.btn-xs#update(type="button", data-href="/admin/strength/update/") 修改
								button.btn.btn-danger.btn-flat.btn-xs#del 删除
					.box-body
						input#onItems(type="hidden", value="#{onitems}")
						table#strengthTable.table.table-hover.table-bordered.table-condensed
							thead
								tr
									th(width=22)
										input#allCheck(type="checkbox", class="i-checks")
									th 标题
									th 简介
									th 封面图
									th 创建时间
									th 首页展示
							tbody.datalist
								each item in strength
									tr
										td
											input(type="checkbox", class="i-checks", value=item._id)
										td #{item.title}
										td #{item.summary}
										td
											img.thumImg(src="#{item.pic}", width="100px", height="22px")
										td #{moment(item.meta.updateAt).format('YYYY/MM/DD HH:mm:ss')}
										td
											if item.displayindex
												input.i-switch(type="checkbox", checked, data-size="mini", data-on-color="success", data-id="#{item._id}")
											else
												input.i-switch(type="checkbox", data-size="mini", data-on-color="success", data-id="#{item._id}")
	script(src="/js/strengthList.js", defer="defer")