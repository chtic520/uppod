extends ../../adminContentLayout

block content
	div.content-header
		ol.breadcrumb
			li
				i.fa.fa-dashboard
				| &nbsp;&nbsp;
				a.text-info(href="/admin/index") 首页
			li
				a.text-info(href="/admin/blog/list") Blog List
			li.active=title
	div.content
		.row
			.col-xs-12
				.box
					.box-header.with-border
						h3.box-title Blog标签列表
						.box-tools
							.btn-toolbar
								button.btn.btn-danger.btn-flat.btn-xs#del 删除
					.box-body
						table#blogTable.table.table-hover.table-bordered.table-condensed
							thead
								tr
									th(width=22)
										input#allCheck(type="checkbox", class="i-checks")
									th(width="33%") 标签名称
									th(width="33%") Blog
									th(width="33%") 创建时间
							tbody.datalist
								each tag in category
									tr
										td
											input(type="checkbox", class="i-checks", value=tag._id)
										td #{tag.name}
										td
											if tag.blog && tag.blog.length > 0
												each item in tag.blog
													span.label.label-info #{item.title}
													| &nbsp;
											else
												| 未添加Blog
										td #{moment(tag.meta.updateAt).format('YYYY/MM/DD HH:mm:ss')}
	script(src="/js/blogCategoryList.js", defer="defer")