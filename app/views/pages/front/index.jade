									//- 			i.fa.fa-star
									//- 		-}
									//- div.product-price
									//- 	span.sale-price #{item.salePrice}
									//- 	| #{item.price}
	div.certificate
		div.container
			div.section
				div.section-title
					h4(style="text-align: center; font-size: 18px;") Our Certificates
				div.section-body
					div.row
						div.col-2
							img(src="/images/certificate_1.jpg")
