extends ../../layout

block content
	div.banner
		div#banner.carousel.slide(data-ride="carousel")
			ol.carousel-indicators
				each ibanner, index in banner
					if index == 0
						li.active(data-target="#banner", data-slide-to="#{index}")
					else
						li(data-target="#banner", data-slide-to="#{index}")
			div.carousel-inner(role="listbox")
				each ibanner, index in banner
					if index == 0
						a.item.active(href=ibanner.href)
							img(style="width:100%;", src="#{ibanner.pic}")
							div.carousel-caption
								h3 #{ibanner.title}
								p #{ibanner.subtitle}
					else
						a.item(href=ibanner.href)
							img(style="width:100%;", src="#{ibanner.pic}")
							div.carousel-caption
								h3 #{ibanner.title}
								p #{ibanner.subtitle}
	div.product
		div.container
			div.section
				div.section-title
					h4 Featured Products
				div.section-body
					div.row
						each item in product
							div.col-3
								div.product-box
									//- if item.isSale
									//- 	span.product-sale Sale!
									div.product-pic
										a(href="/shop/product/detail/#{item._id}")
											img(src="#{item.pic[0]}")
										if item.pic.length > 1
											a(href="/shop/product/detail/#{item._id}")
												img.pic-hover(src="#{item.pic[1]}")
										//- span QUICK VIEW
									if item.category
										div.product-category.overflow-ellipsis(title="#{item.category[0].name}") #{item.category[0].name}
									div.product-name.overflow-ellipsis(title="#{item.name}")
										a(href="/shop/#{item._id}") #{item.name}
									//- if item.star > 0
									//- 	div.product-star
